<h1>Pacientes</h1>
<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Cpf</th>
      <th>Nome</th>
      <th>Idade</th>
      <th>Genero</th>
      <th>Hip diag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.cpf %></td>
        <td><%= paciente.nome %></td>
        <td><%= paciente.idade %></td>
        <td><%= paciente.genero %></td>
        <td><%= paciente.hip_diag %></td>
        <td><%= link_to 'Show', paciente %></td>
        <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Destroy', paciente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Paciente', new_paciente_path %>
<%= link_to 'Inicio', root_path %>
